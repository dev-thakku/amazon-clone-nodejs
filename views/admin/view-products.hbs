<section style="width: 100%; overflow-y: hidden;">

    <div class="row pb-3 bg-dark"><a href="/admin/add-product" class="btn btn-success  ml-auto mt-3 mr-4">Add
            Product</a>
    </div>


    <table class="table" style="width: 100%;">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">Brand</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            {{#each products}}
            <tr valign="center">
                <th scope="row">{{this.no}}</th>
                <td>{{this.name}}</td>
                <td>{{this.brand}}</td>
                <td>{{this.category}}</td>
                <td> <small>â‚¹ </small> <strong>{{this.price}}</strong></td>
                <td> <img src="/images/product-images/{{this._id}}.jpg" alt="{{this.name}} image" style="
                    height: 50px;
                    object-fit: contain
                    ">
            </tr>
            {{/each}}
        </tbody>
    </table>

</section>