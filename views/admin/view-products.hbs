<section>{{!-- width: 100%; --}}

    <div class="row p-3 justify-content-between pl-4 pr-4">
        <h4 class="text-dark ">Admin Panel</h4>
        <a href="/admin/add-product" class="btn btn-success">Add
            Product</a>
    </div>


    <table class="table">{{!-- style="width: 100%; --}}
        <thead class=" thead">
            <tr>
                <th scope="col">No.</th>

                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            {{#each products}}
            <tr valign="center">

                <th scope="row">{{this.no}}</th>

                <td> <a href="/admin/product-details?id={{this._id}}" data-toggle="tooltip" data-placement="right"
                        title="View Full Product Details" style="color: var(--primary); text-decoration: underline;">
                        {{this.name}}</a></td>
                <td>{{this.category}}</td>
                <td> <small>â‚¹ </small> <strong>{{this.price}}</strong></td>
                <td> <img src="/images/product-images/{{this._id}}.jpg" alt="{{this.name}} image"
                        style="height: 50px; object-fit: contain">
                </td>
                <td>
                    <button type="button" class="btn btn-danger mt-1" data-toggle="modal"
                        data-target="#deleteModal{{this.no}}">
                        <i class="fa fa-trash-o"></i>
                    </button>
                    <a href="/admin/edit-product?id={{this._id}}" class="btn btn-warning mt-1"><i
                            class="fa fa-pencil"></i></a>

                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal{{this.no}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalCenterTitle">Delete Product</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure want to delete <strong>{{this.name}}</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <a href="/admin/delete-product?id={{this._id}}" type="button"
                                        class="btn btn-danger text-light">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>

            </tr>

            {{/each}}
        </tbody>
    </table>

</section>